{{#each this}}
<li>
    <div>
        <h3 class="name">{{name}}</h3>
        <div class='countrieItem'>

            <div class="textBox">
                <p><strong> Capital: </strong> {{capital}}</p>
                <p><strong> Population: </strong> {{population}}</p>

                <p><strong> languages: </strong> </p>
                <ul>
                    {{#each languages}}<li> {{name}}</li>{{/each}}
                </ul>

            </div>

            <img class='flag' src="{{flag}}" alt="flag" width="300" height="250">
        </div>
    </div>



</li>
{{/each}}